<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/floating_spacing_sm">

        <!-- 快速操作 -->
        <com.google.android.material.card.MaterialCardView
            style="@style/FloatingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/floating_spacing_sm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/floating_spacing_md">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/FloatingText.H3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/floating_spacing_sm"
                    android:text="@string/settings_quick_actions"
                    android:textColor="@color/floating_primary" />

                <!-- 选择调试进程 -->
                <LinearLayout
                    android:id="@+id/setting_select_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_settings_item_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/floating_spacing_sm">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_select_process" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/current_process_name"
                            style="@style/FloatingText.Caption.Secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/floating_spacing_xxs"
                            android:text="@string/settings_no_process_selected" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/floating_icon_md"
                        android:layout_height="@dimen/floating_icon_md"
                        android:src="@drawable/icon_list_24px"
                        android:tint="@color/floating_primary" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 快速操作按钮组 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_terminate_proc"
                        style="@style/FloatingButton.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/floating_spacing_sm"
                        android:layout_weight="1"
                        android:text="@string/settings_terminate_proc" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_exit_overlay"
                        style="@style/FloatingButton.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_exit" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 进程设置 -->
        <com.google.android.material.card.MaterialCardView
            style="@style/FloatingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/floating_spacing_sm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/floating_spacing_md">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/FloatingText.H3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/floating_spacing_sm"
                    android:text="@string/settings_process_settings"
                    android:textColor="@color/floating_primary" />

                <!-- 选择内存范围 -->
                <LinearLayout
                    android:id="@+id/setting_memory_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_settings_item_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_memory_range" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/memory_range_summary"
                        style="@style/FloatingText.Caption.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/floating_spacing_xxs"
                        android:text="@string/settings_memory_range_summary" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 内存预览无限滚动 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/floating_spacing_sm">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_memory_preview_infinite_scroll" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Caption.Secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/floating_spacing_xxs"
                            android:text="@string/settings_memory_preview_infinite_scroll_summary" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_memory_preview_infinite_scroll"
                        style="@style/FloatingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 对进程隐藏Mamu -->
                <LinearLayout
                    android:id="@+id/setting_hide_mamu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_settings_item_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_hide_mamu" />

                        <ImageView
                            android:id="@+id/hide_mamu_expand_icon"
                            android:layout_width="@dimen/floating_icon_md"
                            android:layout_height="@dimen/floating_icon_md"
                            android:src="@drawable/icon_arrow_drop_down_24px"
                            android:tint="@color/floating_text_secondary" />

                    </LinearLayout>

                    <!-- 隐藏模式 CheckBox 组（默认隐藏） -->
                    <LinearLayout
                        android:id="@+id/hide_mamu_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/floating_spacing_xs"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_hide_mode_1"
                            style="@style/FloatingCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_hide_mode_1" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_hide_mode_2"
                            style="@style/FloatingCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_hide_mode_2" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_hide_mode_3"
                            style="@style/FloatingCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_hide_mode_3" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_hide_mode_4"
                            style="@style/FloatingCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_hide_mode_4" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 跳过内存区域 -->
                <LinearLayout
                    android:id="@+id/setting_skip_memory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_settings_item_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_skip_memory" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/skip_memory_value"
                        style="@style/FloatingText.Caption.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/floating_spacing_xxs"
                        android:text="@string/settings_skip_memory_none" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 自动暂停进程 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_auto_pause" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_auto_pause"
                        style="@style/FloatingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 冻结间隔 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/floating_spacing_xs"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_freeze_interval" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/freeze_interval_value"
                            style="@style/FloatingText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:minWidth="@dimen/floating_min_button_width"
                            android:text="33000 μs" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/seekbar_freeze_interval"
                        style="@style/FloatingSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="100000"
                        android:value="33000"
                        android:stepSize="1000" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 搜索设置 -->
        <com.google.android.material.card.MaterialCardView
            style="@style/FloatingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/floating_spacing_sm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/floating_spacing_md">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/FloatingText.H3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/floating_spacing_sm"
                    android:text="@string/settings_search_settings"
                    android:textColor="@color/floating_primary" />

                <!-- 内存缓冲区大小 -->
                <LinearLayout
                    android:id="@+id/setting_memory_buffer_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_settings_item_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_memory_buffer_size" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/memory_buffer_size_value"
                        style="@style/FloatingText.Caption.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/floating_spacing_xxs"
                        android:text="@string/memory_buffer_size_512_mb" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 搜索分块大小 -->
                <LinearLayout
                    android:id="@+id/setting_chunk_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_settings_item_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_chunk_size" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/chunk_size_value"
                        style="@style/FloatingText.Caption.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/floating_spacing_xxs"
                        android:text="@string/chunk_size_512_kb" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 通用设置 -->
        <com.google.android.material.card.MaterialCardView
            style="@style/FloatingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/floating_spacing_sm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/floating_spacing_md">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/FloatingText.H3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/floating_spacing_sm"
                    android:text="@string/settings_general_settings"
                    android:textColor="@color/floating_primary" />

                <!-- 过滤系统进程 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_filter_system_process" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_filter_system_process"
                        style="@style/FloatingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 过滤Linux进程 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_filter_linux_process" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_filter_linux_process"
                        style="@style/FloatingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 保存列表更新间隔 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/floating_spacing_xs"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_list_update_interval" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/list_update_interval_value"
                            style="@style/FloatingText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:minWidth="@dimen/floating_min_button_width"
                            android:text="1000 ms" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/seekbar_list_update_interval"
                        style="@style/FloatingSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="5000"
                        android:value="1000"
                        android:stepSize="100" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 内存读写模式 -->
                <LinearLayout
                    android:id="@+id/setting_memory_rw_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_settings_item_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_memory_rw_mode" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/memory_rw_mode_value"
                        style="@style/FloatingText.Caption.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/floating_spacing_xxs"
                        android:text="@string/settings_memory_rw_mode_normal" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 透明度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/floating_spacing_xs"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_opacity" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/opacity_value"
                            style="@style/FloatingText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:minWidth="@dimen/floating_touch_target"
                            android:text="55%" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/opacity_seekbar"
                        style="@style/FloatingSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="100"
                        android:value="55"
                        android:stepSize="1" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- Dialog透明度开关 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/floating_spacing_sm">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_dialog_transparency" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Caption.Secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/floating_spacing_xxs"
                            android:text="@string/settings_dialog_transparency_summary" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_dialog_transparency"
                        style="@style/FloatingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 兼容模式 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/floating_spacing_sm">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_compatibility_mode" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Caption.Secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/floating_spacing_xxs"
                            android:text="@string/settings_compatibility_mode_summary" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_compatibility_mode"
                        style="@style/FloatingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 最高层级绘制 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/floating_spacing_sm"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_top_most_layer" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/FloatingText.Caption.Secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/floating_spacing_xxs"
                            android:text="@string/settings_top_most_layer_summary" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_top_most_layer"
                        style="@style/FloatingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 界面设置 -->
        <com.google.android.material.card.MaterialCardView
            style="@style/FloatingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/floating_spacing_sm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/floating_spacing_md">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/FloatingText.H3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/floating_spacing_sm"
                    android:text="@string/settings_ui_settings"
                    android:textColor="@color/floating_primary" />

                <!-- 键盘 -->
                <LinearLayout
                    android:id="@+id/setting_keyboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_settings_item_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_keyboard" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/keyboard_value"
                        style="@style/FloatingText.Caption.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/floating_spacing_xxs"
                        android:text="@string/settings_keyboard_builtin" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/floating_spacing_xs"
                    app:dividerColor="@color/floating_divider" />

                <!-- 语言 -->
                <LinearLayout
                    android:id="@+id/setting_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_settings_item_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/floating_spacing_sm">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/FloatingText.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_language" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/language_value"
                        style="@style/FloatingText.Caption.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/floating_spacing_xxs"
                        android:text="@string/settings_language_zh_cn" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
