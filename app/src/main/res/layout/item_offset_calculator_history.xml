<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/floating_spacing_lg"
    android:paddingVertical="@dimen/floating_spacing_sm">

    <!-- 表达式行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_expression"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/floating_text_body"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hex_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/floating_spacing_sm"
            android:background="#33FFFFFF"
            android:paddingHorizontal="@dimen/floating_spacing_xs"
            android:paddingVertical="2dp"
            android:text="HEX"
            android:textColor="#88CCFF"
            android:textSize="@dimen/floating_text_caption"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 地址信息行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_base_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/floating_text_secondary"
            android:textSize="@dimen/floating_text_caption" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/floating_spacing_xs"
            android:text="→"
            android:textColor="@color/floating_text_secondary"
            android:textSize="@dimen/floating_text_caption" />

        <TextView
            android:id="@+id/tv_final_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#88FF88"
            android:textSize="@dimen/floating_text_caption" />

    </LinearLayout>

</LinearLayout>
