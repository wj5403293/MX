<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/FloatingCard.ListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/floating_height_list_item_sm"
        android:paddingStart="@dimen/floating_spacing_sm"
        android:paddingTop="@dimen/floating_spacing_xs"
        android:paddingEnd="@dimen/floating_spacing_sm"
        android:paddingBottom="@dimen/floating_spacing_xs">

        <!-- CheckBox -->

        <!-- 地址 -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox"
            style="@style/FloatingCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/address_text"
            style="@style/FloatingText.Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/floating_spacing_xs"
            android:text="7FFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 值 -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/value_text"
            style="@style/FloatingText.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/floating_spacing_md"
            android:layout_marginEnd="@dimen/floating_spacing_sm"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0"
            app:layout_constraintBottom_toTopOf="@id/backup_value_text"
            app:layout_constraintEnd_toStartOf="@id/info_container"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/address_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <!-- 备份值（旧值） -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/backup_value_text"
            style="@style/FloatingText.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/floating_spacing_md"
            android:layout_marginEnd="@dimen/floating_spacing_sm"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="(100)"
            android:textColor="#88FFFFFF"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/info_container"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/address_text"
            app:layout_constraintTop_toBottomOf="@id/value_text" />

        <!-- 类型+范围信息 -->
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/floating_spacing_xs"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete_button"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/type_text"
                style="@style/FloatingText.Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/range_text"
                style="@style/FloatingText.Range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="B" />

        </LinearLayout>

        <!-- 删除按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_button"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="@dimen/floating_touch_target"
            android:layout_height="@dimen/floating_touch_target"
            android:contentDescription="@string/content_desc_delete"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/baseline_delete_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
