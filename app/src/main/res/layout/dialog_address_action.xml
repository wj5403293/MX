<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:minWidth="280dp"
    android:orientation="vertical"
    app:maxWidthPercent="0.8"
    app:maxHeightPercent="0.9">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/floating_spacing_lg"
        android:paddingBottom="@dimen/floating_spacing_md">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="地址操作"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/floating_text_h2"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 地址信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A1A1A"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="@dimen/floating_spacing_md">

        <TextView
            android:id="@+id/addressInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#64B5F6"
            android:textSize="@dimen/floating_text_h3" />

        <TextView
            android:id="@+id/valueInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#CCCCCC"
            android:textSize="@dimen/floating_text_body" />

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2F2F2F" />

    <!-- 选项列表 -->
    <ListView
        android:id="@+id/actionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#2F2F2F"
        android:dividerHeight="1dp"
        android:scrollbars="vertical" />

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2F2F2F" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/floating_spacing_sm">

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minWidth="@dimen/floating_height_button"
            android:paddingHorizontal="@dimen/floating_spacing_lg"
            android:paddingVertical="@dimen/floating_spacing_sm"
            android:text="取消"
            android:textColor="#CCCCCC" />

    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>
